/******************************************************************************

Gabriel Souza -- Progama para indentificar se o aluno está aprovado ou reprovado
de acordo com a média que é 6

*******************************************************************************/
#include <stdio.h>

int main()
{
    int valor;
    
    printf("Insira um valor inteiro:\n");
    
    scanf("%d", &valor);
    
    printf("\nValor inserido: %d\n\n", valor);
    
    if(valor > 6.0)
    
    printf("Aprovado \n\n");
    else
    printf("Reprovado \n\n");
    
    return 0;
}
