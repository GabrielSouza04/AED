/******************************************************************************

Gabriel Souza-- codigo para saber o fatorial do numero 4
*******************************************************************************/
#include <stdio.h>

int fatorial(int n)
{
    int fat;
   
    if( n == 0 ) {
        fat = 1;
    } else {
        fat = n * fatorial (n-1);
    }

    return fat;
}

int main() {
    int n = fatorial(4);
   
    printf("\n O fatorial de 4 Ã© %d", n);
   
    return 0;
}
